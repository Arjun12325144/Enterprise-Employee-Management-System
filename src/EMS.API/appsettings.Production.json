{
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_DATABASE_SERVER;Database=EMS_Production;User Id=YOUR_USER;Password=YOUR_PASSWORD;"
  },
  "JwtSettings": {
    "SecretKey": "CHANGE_THIS_TO_A_STRONG_SECRET_KEY_IN_PRODUCTION_32CHARACTERS+",
    "Issuer": "EMS.API",
    "Audience": "EMS.Client",
    "ExpirationMinutes": "60",
    "RefreshTokenExpirationDays": "7"
  },
  "AISettings": {
    "ApiUrl": "",
    "ApiKey": ""
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/ems-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "https://yourdomain.com",
      "https://www.yourdomain.com"
    ]
  }
}
